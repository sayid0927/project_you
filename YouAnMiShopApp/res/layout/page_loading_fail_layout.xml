<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_fail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg" >

    <ImageView
        android:id="@+id/loading_fail_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/loading_marginTop"
        android:src="@drawable/img_default_shy" />

    <TextView
        android:id="@+id/loading_fail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loading_fail_imageView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/light_grey"
        android:text="您的手机网络不太顺畅哦!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loading_fail_text"
        android:layout_marginTop="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/orange_ff5f19"
        android:background="@drawable/btn_submit_normal"
        android:textSize="12sp"
         />

</RelativeLayout>