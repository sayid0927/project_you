<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ptr="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange_ff5f19"
        android:orientation="vertical">
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_back"
            android:paddingLeft="12dp"
            android:paddingRight="25dp"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="15"
            android:textColor="@color/white"
            android:text="选择群推人员"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/btn_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/icon_addnew"
            android:drawablePadding="5dp"
            android:text="新增"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent" >
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="@color/transparent"
            android:scrollbars="none"
            android:scrollingCache="false"
             />
        <com.zxly.o2o.view.LoadingView
            android:id="@+id/view_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dcdcdc"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|right"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textColor="@color/gray_888888"
                android:layout_marginRight="19dp"
                />
            <TextView
                android:id="@+id/txt_count"
                android:layout_toLeftOf="@+id/people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:textSize="16sp"
                android:textColor="@color/orange_ff5f19"
                android:text=""/>
            <TextView
                android:id="@+id/txt_all"
                android:layout_toLeftOf="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_888888"
                android:layout_marginRight="19dp"
                android:textSize="16sp"
                android:text="共"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/btn_done"
            android:layout_width="152dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@color/orange_ff5f19">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>