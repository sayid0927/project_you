<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f2f2f2" android:gravity="center_horizontal">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/orange_ff5f19">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:contentDescription="@null"
            android:background="@color/transparent"
            android:scaleType="center"
            android:src="@drawable/back" />

        <TextView
            style="@style/text_18_white"
            android:layout_width="wrap_content"
            android:id="@+id/txt_title"
            android:text="设备管理"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <ImageView
        android:layout_width="wrap_content"  android:id="@id/img_loadResult" android:layout_marginTop="82dp"
        android:layout_height="wrap_content" android:background="@drawable/img_default_disppoint" />
    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"  android:id="@+id/txt_msg" android:layout_marginTop="26dp" android:textSize="15sp" android:textColor="#333333"
        android:text=" 您尚未连接....."/>

    <View
        android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/grey" android:layout_marginTop="69dp"/>
    <TextView
        android:layout_width="match_parent" android:layout_height="42dp" android:id="@+id/txt_route" android:textSize="13sp" android:gravity="center_vertical" android:textColor="#999999"
        android:background="@color/app_bg" android:text="如何连接路由" android:paddingLeft="10dp"  android:paddingRight="10dp"  android:drawableRight="@drawable/icon_turn_right"/>
    <View
        android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/grey" android:layout_marginLeft="10dp"/>
    <TextView android:visibility="gone"
        android:layout_width="match_parent" android:layout_height="42dp" android:id="@+id/txt_cdb" android:textSize="13sp" android:gravity="center_vertical" android:textColor="#999999"
        android:background="@color/app_bg" android:text="如何连接充电宝" android:paddingLeft="10dp"  android:paddingRight="10dp"  android:drawableRight="@drawable/icon_turn_right"/>
    <View
        android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/grey" />
</LinearLayout>