<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/orange_ff5f19">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@drawable/fanhui" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_user_promotion"
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/bg_tap"
                android:gravity="center"
                android:text="会员推广"
                android:textColor="@color/orange_ff5f19"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_article_promotion"
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginRight="11dp"
                android:gravity="center"
                android:text="文章推荐"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_product_promotion"
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginRight="11dp"
                android:gravity="center"
                android:text="商品推荐"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>


    <com.zxly.o2o.view.FixedViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title" />


</RelativeLayout>
