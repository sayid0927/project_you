<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vrtv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="12.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FA6A2B">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_ljsy" />

        <TextView
            android:id="@+id/txt_ljsy_lable"
            style="@style/text_14_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ljsy"
            android:text=" 累计收益" />

        <TextView
            android:id="@+id/txt_total_yield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ljsy_lable"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/btn_symx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_total_yield"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_symx_selector"
            android:gravity="center"
            android:text="  收益明细  "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/btn_symx"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dotted_line" />

        <TextView
            android:id="@+id/txt_cur_yield"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@id/line"
            android:layout_marginLeft="11dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/btn_llcz"
            android:layout_width="match_parent"
            android:layout_height="72.5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="14.5dp"
                android:background="@drawable/icon_llcz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="17.5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="流量充值"
                    android:textColor="#71bcf9"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="全国通用\n随时充流量"
                    android:textColor="@color/gray_959595"
                    android:textSize="10sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/btn_ybgl"
            android:layout_width="match_parent"
            android:layout_height="72.5dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_ybgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="14.5dp"
                android:background="@drawable/icon_ybgl" />

            <TextView
                android:id="@+id/txt_yanbao_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/img_ybgl"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/bg_guarantee_count"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="17.5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延保管理"
                    android:textColor="#00c6bc"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="推荐保障服务\n简单赚提成"
                    android:textColor="@color/gray_959595"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/btn_zyj"
            android:layout_width="match_parent"
            android:layout_height="72.5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="14.5dp"
                android:background="@drawable/icon_zyj" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="17.5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赚佣金"
                    android:textColor="#ffba00"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="转发商品\n轻松赚佣金"
                    android:textColor="@color/gray_959595"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/lin_msg_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/btn_msg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/horn"
            android:text=" 系统消息："
            android:textColor="#333333"
            android:textSize="12sp" />

        <com.zxly.o2o.view.VerticalRollingTextView
            android:id="@+id/txt_sysMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="邀请客户享受到店优惠！"
            android:textColor="#333333"
            android:textSize="12sp"
            vrtv:vrColor="@color/gray_333333"
            vrtv:vrHighlightColor="@color/orange_ff5f19"
            vrtv:vrSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_msg_buttom"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray_eeeeee"
        android:visibility="gone" />

    <TextView
        style="@style/text_14_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:drawableLeft="@drawable/pic_left"
        android:text="  赚钱攻略 " />
</LinearLayout>
