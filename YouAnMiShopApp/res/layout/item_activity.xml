<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_white_bg"
    android:orientation="vertical"
    android:paddingLeft="11dp"
    android:paddingRight="9.5dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:paddingBottom="8dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_head_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="9.5dp"
            android:background="@color/red"
            android:src="@drawable/icon_default_170x170" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_head_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_head_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="暂无"
            android:textColor="@color/gray_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_browseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_desc"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_head_icon"
            android:text="9999 浏览数"
            android:textColor="@color/gray_999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_shareCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_desc"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_browseCount"
            android:text="9999 转发"
            android:textColor="@color/gray_999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/btn_promotion"
            android:layout_width="57dp"
            android:layout_height="26dp"
            android:layout_alignBottom="@+id/img_head_icon"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_promotion_normal"
            android:gravity="center"
            android:text="推广"
            android:textColor="@color/orange_ff5f19"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dcdcdc" />
</LinearLayout>
